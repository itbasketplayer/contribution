    var jiathis_config = {
        id:"",
        url: "",
        title: "",
        evt: {
            "share": "addShareRecord"
        }
    }

    function setShare(title, url, cid) {
        jiathis_config.title = title;
        jiathis_config.url = url;
        jiathis_config.cid = cid;
    }
    function addShareRecord(evt) {
        var url = evt.data.url;
        var source = evt.data.service;

        $.ajax({
            url : "<%= web_domain%>/pc/share",
            type : "POST",
            dataType:"json",
            data:{
                "cid":jiathis_config.cid,
                "channel":evt.data.service
            },
            success : function(data) {
                if(data){
                    alert("success");
                }
            }
        });
    }
</script>
